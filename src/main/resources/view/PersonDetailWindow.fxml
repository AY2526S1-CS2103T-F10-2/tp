<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root resizable="true" title="Person Details" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" minWidth="500" minHeight="400">
  <icons>
    <Image url="@/images/info_icon.png" />
  </icons>
  <scene>
    <Scene stylesheets="@DarkTheme.css">

      <VBox spacing="15" alignment="TOP_LEFT">
        <padding>
          <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <!-- Title -->
        <Label text="Contact Details" styleClass="person-detail-title">
          <font>
            <Font size="24" />
          </font>
          <VBox.margin>
            <Insets bottom="20" />
          </VBox.margin>
        </Label>

        <!-- Content -->
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
          <content>
            <VBox fx:id="contentBox" spacing="12" alignment="TOP_LEFT">
              <Label fx:id="nameLabel" text="Name: " styleClass="person-detail-label" />
              <Label fx:id="phoneLabel" text="Phone: " styleClass="person-detail-label" />
              <Label fx:id="emailLabel" text="Email: " styleClass="person-detail-label" />
              <Label fx:id="addressLabel" text="Address: " styleClass="person-detail-label" />
              <Label fx:id="birthdayLabel" text="Birthday: " styleClass="person-detail-label" />
              <Label fx:id="tagsLabel" text="Tags: " styleClass="person-detail-label" />
              <Label fx:id="coursesLabel" text="Courses: " styleClass="person-detail-label" />
            </VBox>
          </content>
        </ScrollPane>

      </VBox>
    </Scene>
  </scene>
</fx:root>
