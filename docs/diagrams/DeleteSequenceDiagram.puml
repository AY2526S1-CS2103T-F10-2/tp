@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":CourseBookParser" as CourseBookParser LOGIC_COLOR
participant ":DeleteCommandParser" as DeleteCommandParser LOGIC_COLOR
participant "d:DeleteCommand" as DeleteCommand LOGIC_COLOR
participant "r:CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box

box UI UI_COLOR_T1
participant ":UI" as UI UI_COLOR
end box

note over LogicManager, UI: **Phase 1: Parse and Validate**

[-> LogicManager : execute("delete 1")
activate LogicManager

LogicManager -> CourseBookParser : parseCommand("delete 1")
activate CourseBookParser

create DeleteCommandParser
CourseBookParser -> DeleteCommandParser
activate DeleteCommandParser

DeleteCommandParser --> CourseBookParser
deactivate DeleteCommandParser

CourseBookParser -> DeleteCommandParser : parse("1")
activate DeleteCommandParser

note right of DeleteCommandParser: Validates index format

create DeleteCommand
DeleteCommandParser -> DeleteCommand : new DeleteCommand(Index(0))
activate DeleteCommand

DeleteCommand --> DeleteCommandParser
deactivate DeleteCommand

DeleteCommandParser --> CourseBookParser : d
deactivate DeleteCommandParser

destroy DeleteCommandParser

CourseBookParser --> LogicManager : d
deactivate CourseBookParser

LogicManager -> DeleteCommand : execute(m)
activate DeleteCommand

DeleteCommand -> Model : getFilteredPersonList()
activate Model
Model --> DeleteCommand : lastShownList
deactivate Model

note right of DeleteCommand: Validates index < list.size()\nCollects personsToDelete\n(NO deletion yet)

create CommandResult
DeleteCommand -> CommandResult : forDeleteConfirmation(message, personsToDelete)
activate CommandResult

note right of CommandResult: requiresConfirmation=true\npersonsToDelete stored\nin CommandResult

CommandResult --> DeleteCommand : r
deactivate CommandResult

DeleteCommand --> LogicManager : r
deactivate DeleteCommand

LogicManager --> UI : r
deactivate LogicManager

note over LogicManager, UI: **Phase 2: Confirmation Dialog**

UI -> UI : showConfirmationDialog(r)
activate UI
note right of UI: Display:\n"Are you sure you want to delete:\n- John Doe"\n\nUser clicks OK

UI --> UI
deactivate UI

note over LogicManager, UI: **Phase 3: Execute Deletion**

UI -> LogicManager : executeConfirmedDelete(r)
activate LogicManager

note right of LogicManager: Extract personsToDelete\nfrom CommandResult

loop for each person in personsToDelete
    LogicManager -> Model : deletePerson(person)
    activate Model
    Model --> LogicManager
    deactivate Model
end

note right of LogicManager: Save to storage

create CommandResult
LogicManager -> CommandResult : new CommandResult("Deleted Person: John Doe")
activate CommandResult
CommandResult --> LogicManager
deactivate CommandResult

LogicManager --> UI : success result
deactivate LogicManager

UI -> UI : display("Deleted Person: John Doe")
activate UI
UI --> UI
deactivate UI

@enduml